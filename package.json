{
  "name": "cardflow",
  "version": "1.0.0",
  "description": "CardFlow is a trading card collection tracker for multiple TCG brands.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "e2e": "node tests/e2e-add-card.js",
    "e2e:mtg": "node tests/e2e-mtg.js",
    "e2e:ygo": "node tests/e2e-yugioh.js",
    "e2e:onepiece": "node tests/e2e-onepiece.js",
    "e2e:dragonball": "node tests/e2e-dragonball.js",
    "e2e:all": "npm run e2e && npm run e2e:mtg && npm run e2e:ygo && npm run e2e:onepiece && npm run e2e:dragonball",
    "playwright:install": "npx playwright install --with-deps",
    "playwright:test": "npx playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tawnaylor/cardflow.git"
  },
  "keywords": [],
