  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tawnaylor/cardflow/issues"
  },
  "homepage": "https://github.com/tawnaylor/cardflow#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "playwright": "^1.36.0"
  }
}
